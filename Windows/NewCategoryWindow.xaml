<Window x:Class="Product_Manager.Windows.NewCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Product_Manager.Windows"
        xmlns:vm="clr-namespace:Product_Manager.ViewModels"
        mc:Ignorable="d"
        Title="New Category" Height="450" Width="800" Icon="../Assets (Solution)/ICO Type/logo.ico">

    <Window.DataContext>
        <vm:CategoryViewModel/>
    </Window.DataContext>
    
    <StackPanel Margin="50">
        <Label Content="Category ID"/>
        <TextBox Text="{Binding CategoryId}"/>

        <Label Content="Category Name"/>
        <TextBox Text="{Binding Name}"/>

        <Button Style="{StaticResource PrimaryButton}" Content="Submit" Command="{Binding NewCategorySubmitCommand}" Width="150"/>
    </StackPanel>
</Window>
